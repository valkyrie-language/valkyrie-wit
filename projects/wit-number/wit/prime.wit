package vit:number

interface prime {
    /// unsigned integer buffer
    record prime {
        ordinal: ordinal
    }

    new-ord: func(ordinal: ordinal) -> option<prime>

    check-nat: func(n: natural) -> bool

    iter-has-next: func(self: prime) -> bool
    iter-has-prev: func(self: prime) -> bool
    iter-next: func(self: prime) -> prime
    iter-prev: func(self: prime) -> prime

    around-prev: func(n: natural) -> prime
    around-next: func(n: natural) -> prime
}

world prime-ffi {
    export prime
}


